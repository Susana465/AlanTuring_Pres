\newlength{\framesubtitlesize}
\setlength{\framesubtitlesize}{26pt}

\newlength{\bodytext}
\setlength{\bodytext}{32pt}

\newlength{\footerfontsize}
\setlength{\footerfontsize}{16pt}

\newcommand{\lineheightmultiplier}{1.5}

\setbeamerfont{title}{size={\fontsize{\titlefontsize}{\lineheightmultiplier\titlefontsize}}}
\setbeamerfont{subtitle}{size={\fontsize{\subtitlefontsize}{\lineheightmultiplier\subtitlefontsize}}}
\setbeamerfont{frametitle}{series=\bfseries,size={\fontsize{\frametitlesize}{\lineheightmultiplier\frametitlesize}}}
\setbeamerfont{framesubtitle}{series=\bfseries,size={\fontsize{\framesubtitlesize}{\lineheightmultiplier\framesubtitlesize}}}
\setbeamerfont{footline}{series=\mdseries,size={\fontsize{\footerfontsize}{\lineheightmultiplier\footerfontsize}}}


% 
\setbeamerfont{block title}{series=\bfseries,size={\fontsize{\bodytext}{\lineheightmultiplier\bodytext}}}
\setbeamerfont{block body}{series=\mdseries,size={\fontsize{\bodytext}{\lineheightmultiplier\bodytext}}}
\setbeamerfont*{block itemize/enumerate body}{size=\fontsize{\bodytext}{\lineheightmultiplier\bodytext}}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate body}

\setbeamertemplate{itemize item}{\raisebox{0.3ex}{$\blacktriangleright$}}%
\setbeamertemplate{itemize item}{\raisebox{0.3ex}{$\blacktriangleright$}}%
\setbeamertemplate{itemize subitem}{\raisebox{0.3ex}{$\blacktriangleright$}}%
\setbeamertemplate{itemize subsubitem}{\raisebox{0.3ex}{$\blacktriangleright$}}%

\usefonttheme{professionalfonts}

\setbeamertemplate{navigation symbols}{}

\defbeamertemplate{frame numbering}{counter}{\insertframenumber}

% Set colours from beamer colour theme
